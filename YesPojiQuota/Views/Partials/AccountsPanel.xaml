<UserControl
    x:Class="YesPojiQuota.Views.AccountsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YesPojiQuota.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:YesPojiQuota.ViewModels"
    mc:Ignorable="d"
    DataContext="{Binding Accounts, Source={StaticResource Locator}}"
    Loaded="UserControl_Loaded"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>

        <DataTemplate x:Name="AccountsPanelTemplate" x:DataType="viewModels:AccountViewModel">
            <Grid>
                <Grid.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Refresh" Click="{x:Bind Init}" />
                        <MenuFlyoutSeparator/>
                        <MenuFlyoutItem Text="Delete">
                            <FlyoutBase.AttachedFlyout>
                                <Flyout>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Are you sure to remove this account?" />
                                        <Button Content="Remove" Click="{x:Bind Remove}" />
                                    </StackPanel>
                                </Flyout>
                            </FlyoutBase.AttachedFlyout>
                        </MenuFlyoutItem>
                    </MenuFlyout>
                </Grid.ContextFlyout>

                <Grid HorizontalAlignment="Stretch" Padding="0,10,0,10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="25" />
                        <RowDefinition Height="15" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="125"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{x:Bind Username}" FontSize="16"
                               Grid.Row="0" Grid.ColumnSpan="2"
                               />

                    <TextBlock Text="{x:Bind QuotaString, Mode=OneWay}" Grid.Row="1" 
                               HorizontalAlignment="Stretch" Grid.ColumnSpan="2" FontSize="12
                               "/>

                    <ProgressBar Value="{x:Bind Quota, Mode=OneWay}" Maximum="{x:Bind MaxQuota}" 
                                 Grid.Row="2" Grid.Column="0" 
                                 HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                                 Margin="0,0,50,10" >
                        <ProgressBar.Foreground>
                            <SolidColorBrush Color="{ThemeResource SystemAltMediumColor}"/>
                        </ProgressBar.Foreground>
                    </ProgressBar>

                    <Button Content="Connect" Click="{x:Bind Login}"
                            Grid.Column="1" Grid.Row="1"  Grid.RowSpan="2"
                            HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                            IsEnabled="{x:Bind CanLogin, Mode=OneWay}" 
                            />

                </Grid>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <ListView ItemTemplate="{StaticResource AccountsPanelTemplate}"
                  ItemsSource="{x:Bind vm.Accounts}" MaxWidth="700">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</UserControl>
